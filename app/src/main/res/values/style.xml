<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item> <!-- 调整为你想要的字体大小 -->
        <item name="android:textColor">#000000</item> <!-- 可选：修改文字颜色 -->
    </style>
    <!-- 通过：绿色背景 + 白色文字 -->
    <style name="StateTextApproved" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item> <!-- 白色字体 -->
        <item name="android:background">#4CAF50</item> <!-- 绿色背景 -->
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- 未通过：红色背景 + 白色文字 -->
    <style name="StateTextRejected" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item> <!-- 白色字体 -->
        <item name="android:background">#F44336</item> <!-- 红色背景 -->
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- 审核中：橙色背景 + 深色文字 -->
    <style name="StateTextPending" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item> <!-- 黑色字体 -->
        <item name="android:background">#FFA726</item> <!-- 橙色背景 -->
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>